<Window x:Class="Troll.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Troll"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">
    <Grid>
        <Label Content="Czy pójdziemy do teatru?" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnY" Content="Tak" HorizontalAlignment="Center" Margin="0,80,90,40" VerticalAlignment="Center" Width="75" MouseEnter="btnY_MouseEnter" />
        <Button x:Name="btnN" Content="Nie" HorizontalAlignment="Center" Margin="90,80,0,40" VerticalAlignment="Center" Width="75" Click="btnN_Click"/>

    </Grid>
</Window>
